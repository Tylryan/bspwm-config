#	thunar

#dmenu
super + shift + d
	dmenu_run -i -nb '#191919' -nf '#fea63c' -sb '#fea63c' -sf '#191919' -fn 'NotoMonoRegular:bold:pixelsize=14'

#reload sxhkd:
super + shift + s
	pkill -USR1 -x sxhkd
# toggle window visibility (hide/show)
super + shift + o
    bash $HOME/.config/bspwm/scripts/toggle_win_vis.sh

